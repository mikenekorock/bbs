 <h1>Listing bbs</h1>
<% no = 1 %>
 <% @bbs.each do |bb| %>
 <div class="row">
  <div class="col-sm-1" style="background:green">#<%= no %></div>
  <div class="col-sm-7" style="background:gray">Name:<%= bb.name %></div>
  <div class="col-sm-4" style="background:pink"><%= bb.time %></div>
  <div class="col-sm-12" style="background:orange"><%= simple_format(bb.text) %></div>
 </div>
 <br>
 <% no += 1 %>
 <% end %>
